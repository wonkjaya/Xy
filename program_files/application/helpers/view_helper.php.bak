<?php
function head($data=array()){
	echo '
		<!DOCTYPE html>
		<html lang="en">
		 <head>
			<meta name="viewport" content="width=device-width, initial-scale=1">
			<title>'.$data['title'].'</title>
			'.css(array('bootstrap.css','style.css')).'
			
		 </head>
			
	';
}
function footer(){
	echo '
		</div> 
	';//untuk class "container-fluid"
}
function header_template($data=array()){
	check_login(); //check jk belum login
	$CI=& get_instance();
	head($data);
	$CI->load->view('header',$data);
}
function footer_template($data=array()){
	$CI=& get_instance();
	$CI->load->view('footer',$data);
}

function template_view($data=array(),$body='notfound',$header=true,$footer=true){
	$CI=& get_instance();
	$CI->load->view($body,$data);
	if($header == true)header_template($data);
	if($footer == true)footer_template($data);
}

?>